{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [ "dom", "es5", "es2015.promise" ],
        "allowJs": true,
        "types": [
            "requirejs"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "typings"
    ]
}