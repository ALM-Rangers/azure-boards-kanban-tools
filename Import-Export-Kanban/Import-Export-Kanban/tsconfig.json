        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "allowJs": true,
        "types": [
            "requirejs"
        ],
        "typeRoots": [
            "node_modules/@types"
